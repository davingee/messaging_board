<div class="modal fade" id="forgotPassword" tabindex="-1" role="dialog" aria-labelledby="forgotPassword">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Forgot your password?</h4>
      </div>
      <div class="modal-body">

        <%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), method: :post) do |f| %>
          <%= f.input :email, placeholder: 'user@domain.com', :autofocus => true %>
          <div class="modal-footer">
            <div>
              <%= f.button :submit, 'Sign in', :class => 'btn btn-small btn-success'%>
              <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
            <%= link_to "Sign Up", "#signUp", 'data-target' => "#signUp", "data-toggle" => "modal", 'data-dismiss' => "modal" %>
            /
            <%= link_to "Sign In", "#signIn", 'data-target' => "#signIn", "data-toggle" => "modal", 'data-dismiss' => "modal" %>
          </div>
        <% end %>

      </div>
    </div>
  </div>
</div>
